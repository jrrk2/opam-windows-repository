opam-version: "1"
maintainer: "jerome.vouillon@pps.univ-paris-diderot.fr"
build: [
  ["make" "UISTYLE=lablgtk2"
      "OCAMLOPT=i686-w64-mingw32-ocamlopt"
      "OSARCH=win32gnuc"]
  ["i686-w64-mingw32-strip" "unison.exe"]
  ["cp" "unison.exe" "%{prefix}%/i686-w64-mingw32/bin/unison-gtk.exe"]
]
remove: [["rm" "%{prefix}%/i686-w64-mingw32/bin/unison-gtk.exe"]]
depends: ["ocaml-windows" "windows-lablgtk"]

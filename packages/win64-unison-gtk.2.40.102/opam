opam-version: "1"
maintainer: "jerome.vouillon@pps.univ-paris-diderot.fr"
build: [
  ["x86_64-w64-mingw32-windres" "win32rc/unison.res" "win32rc/unison.res.lib"]
  ["make" "UISTYLE=lablgtk2"
      "OCAMLOPT=x86_64-w64-mingw32-ocamlopt"
      "OSARCH=win32gnuc"]
  ["x86_64-w64-mingw32-strip" "unison.exe"]
  ["cp" "unison.exe" "%{prefix}%/x86_64-w64-mingw32/bin/unison-gtk.exe"]
]
remove: [["rm" "-f" "%{prefix}%/x86_64-w64-mingw32/bin/unison-gtk.exe"]]
depends: ["win64-ocaml" "win64-lablgtk"]

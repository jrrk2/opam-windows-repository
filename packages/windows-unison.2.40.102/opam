maintainer: "jerome.vouillon@pps.univ-paris-diderot.fr"
build: [
  ["make" "UISTYLE=text"
      "OCAMLOPT=i686-w64-mingw32-ocamlopt"
      "OSARCH=win32gnuc"]
  ["i686-w64-mingw32-strip" "unison.exe"]
  ["cp" "unison.exe" "%{prefix}%/i686-w64-mingw32/bin/"]
]
remove: [["rm" "%{prefix}%/i686-w64-mingw32/bin/unison.exe"]]
depends: ["ocaml-windows"]

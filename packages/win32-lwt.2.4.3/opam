  ["ocaml" "setup.ml" "-configure"
     "--override" "ocamlfind"
        "%{bin}%/i686-w64-mingw32-ocamlfind"
     "--override" "os_type" "Win32" "--disable-pthread" "--disable-libev"
     "--enable-ssl"]
  ["ocaml" "setup.ml" "-build"]
  ["ocaml" "setup.ml" "-install"]
]
remove: [["ocamlfind" "-toolchain" "win32" "remove" "lwt"]]
depends: ["oasis" { = "0.3.0-1" } "win32-ocamlfind" "win32-ssl"]
